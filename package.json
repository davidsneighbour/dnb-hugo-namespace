{
  "name": "@dnb-org/namespace",
  "description": "Some details about dnb-org elements.",
  "version": "1.0.7",
  "bugs": {
    "url": "https://github.com/dnb-org/namespace/issues"
  },
  "devDependencies": {
    "@dnb-org/commitlint-config": "^3.4.4",
    "@dnb-org/remark-config": "^3.4.4",
    "@dnb-org/standard-version-config": "^3.4.3",
    "@dnb-org/textlint-config": "^3.4.5",
    "@dnb-org/tools": "^3.4.5"
  },
  "homepage": "https://github.com/dnb-org/namespace#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnb-org/namespace.git"
  },
  "scripts": {
    "release": "standard-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "remark": "remark .",
    "textlint": "textlint .",
    "textlint:fix": "textlint --fix ."
  },
  "dependencies": {
    "trim": ">=0.0.3"
  }
}
